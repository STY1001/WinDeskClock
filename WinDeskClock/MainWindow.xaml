                       Visibility="Hidden"
                       Grid.Row="0"
                       Text="WinDeskClock"
                       FontSize="12"
                       FontFamily="Segoe UI SemiBold"
                       Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Margin="32,0,0,0" />
        </Grid>
        <Grid x:Name="OverlayGrid"
              Visibility="Hidden">
            <Grid x:Name="NoneGrid">
                <Rectangle x:Name="NoneRect"
                           Fill="#000000"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Visibility="Hidden" />
            </Grid>
            <Grid x:Name="CRTGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Rectangle x:Name="CRTRectUp"
                           Fill="#000000"
                           Grid.Row="0"
                           RenderTransformOrigin="0.5,0"
                           Visibility="Hidden">
                    <Rectangle.RenderTransform>
                        <ScaleTransform ScaleY="1" />
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle x:Name="CRTRectDown"
                           Fill="#000000"
                           Grid.Row="1"
                           RenderTransformOrigin="0.5,1"
                           Visibility="Hidden">
                    <Rectangle.RenderTransform>
                        <ScaleTransform ScaleY="1" />
                    </Rectangle.RenderTransform>
                </Rectangle>
                <Rectangle x:Name="CRTRectMiddle"
                           VerticalAlignment="Center"
                           Height="3"
                           Fill="#FFFFFF"
                           RenderTransformOrigin="0.5,0.5"
                           Grid.RowSpan="2"
                           Visibility="Hidden">
                    <Rectangle.RenderTransform>
                        <ScaleTransform ScaleX="1" />
                    </Rectangle.RenderTransform>
                </Rectangle>
            </Grid>
            <Grid x:Name="FadeGrid">
                <Rectangle x:Name="FadeRect"
                           Fill="#000000"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Visibility="Hidden"/>
            </Grid>
        </Grid>
    </Grid>
</ui:FluentWindow>
