<ui:FluentWindow x:Class="WinDeskClock.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 xmlns:local="clr-namespace:WinDeskClock"
                 mc:Ignorable="d"
                 Title="WinDeskClock"
                 Height="720"
                 Width="1280"
                 Background="{ui:ThemeResource ApplicationBackgroundBrush}"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica"
                 WindowCornerPreference="Round"
                 WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid x:Name="AppGrid"
              RenderTransformOrigin="0.5,0.5"
              ClipToBounds="True">
            <Grid.RenderTransform>
                <ScaleTransform ScaleX="1"
                                ScaleY="1" />
            </Grid.RenderTransform>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid x:Name="MainGrid"
                  RenderTransformOrigin="0.5,0.5"
                  Grid.Row="1">
                <Grid.RenderTransform>
                    <ScaleTransform ScaleX="1"
                                    ScaleY="1" />
                </Grid.RenderTransform>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Column="0"
                      Grid.RowSpan="3"
                      x:Name="LeftGrid">
                    <Grid x:Name="ClockGrid"
                          RenderTransformOrigin="0,0">
                        <Grid.RenderTransform>
                            <ScaleTransform ScaleX="1"
                                            ScaleY="1" />
                        </Grid.RenderTransform>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Frame x:Name="ClockFrame"
                               NavigationUIVisibility="Hidden"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               Background="Transparent"
                               Margin="10" />
                        <ui:Button Grid.Row="1"
                                   x:Name="EnterDownMenuClockBtn"
                                   Click="EnterDownMenuClockBtn_Click"
                                   Icon="{ui:ImageIcon '/Resources/icons/down.png'}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   Margin="0,5,0,10" />
                    </Grid>
                    <Grid x:Name="DownMenuClockGrid"
                          Visibility="Hidden">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <Border VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="30,10,0,10"
                                    Padding="6,0,6,0"
                                    Background="#0affffff"
                                    CornerRadius="8"
                                    RenderTransformOrigin="1,1"
                                    x:Name="MiniClockBorder"
                                    Visibility="Hidden">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="0"
                                                    ScaleY="0" />
                                </Border.RenderTransform>
                                <Grid ClipToBounds="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="17"
                                               x:Name="MiniClockHour"
                                               Grid.Column="0"
                                               FontSize="24"
                                               FontFamily="Segoe UI Variable Display Regular"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform Y="0" />
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                    <TextBlock Text=":"
                                               Margin="3,0,3,0"
                                               Grid.Column="1"
                                               FontSize="24"
                                               FontFamily="Segoe UI Variable Display Regular"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                                    <TextBlock Text="20"
                                               x:Name="MiniClockMinute"
                                               Grid.Column="2"
                                               FontSize="24"
                                               FontFamily="Segoe UI Variable Display Regular"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}">
                                        <TextBlock.RenderTransform>
                                            <TranslateTransform Y="0" />
                                        </TextBlock.RenderTransform>
                                    </TextBlock>
                                </Grid>
                            </Border>
                            <ui:Button Grid.Row="1"
                                       x:Name="ExitDownMenuClockBtn"
                                       Click="ExitDownMenuClockBtn_Click"
                                       Icon="{ui:ImageIcon '/Resources/icons/up.png'}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="Hidden" />
                        </Grid>
                        <Grid x:Name="MenuClockGrid"
                              Grid.Row="1"
                              Visibility="Hidden">
                            <Grid.RenderTransform>
                                <TranslateTransform Y="0" />
                            </Grid.RenderTransform>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0"
                                  Grid.RowSpan="2">
                                <Grid x:Name="AlarmGrid">
                                    <Grid.RenderTransform>
                                        <TranslateTransform X="0" />
                                    </Grid.RenderTransform>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>
                                    <Grid>
                                        <ScrollViewer x:Name="AlarmScroll"
                                                      Margin="10,0,10,0"
                                                      PanningMode="VerticalOnly">
                                            <StackPanel x:Name="AlarmStack"
                                                        Orientation="Vertical">
                                            </StackPanel>
                                        </ScrollViewer>
                                        <Grid HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Visibility="Visible"
                                              x:Name="NoAlarmGrid">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="10" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Image x:Name="NoAlarmImage"
                                                   Source="/Resources/icons/alarm.png"
                                                   Width="72"
                                                   Height="72"
                                                   RenderOptions.BitmapScalingMode="HighQuality"
                                                   Grid.Row="0" />
                                            <TextBlock x:Name="NoAlarmText"
                                                       Text="No alarms"
                                                       FontSize="20"
                                                       FontFamily="Segoe UI Variable Display Regular"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                       Grid.Row="2" />
                                        </Grid>
                                    </Grid>
                                    <ui:Button x:Name="AddAlarmBtn"
                                               Content="Add alarm"
                                               FontFamily="Segoe UI Variable Display Regular"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                               Grid.Row="1"
                                               Width="200"
                                               Appearance="Primary"
                                               Icon="{ui:ImageIcon '/Resources/icons/add.png'}"
                                               HorizontalAlignment="Center"
                                               Click="AddAlarmBtn_Click" />
                                </Grid>
                                <Grid x:Name="StopwatchGrid"
                                      Visibility="Hidden">
                                    <Grid.RenderTransform>
                                        <TranslateTransform X="0" />
                                    </Grid.RenderTransform>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>
                                    <Grid x:Name="StopwatchSubGrid">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0.4*" />
                                            <RowDefinition Height="Auto"
                                                           x:Name="StopwatchLapRow" />
                                        </Grid.RowDefinitions>
                                        <Border VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                CornerRadius="8"
                                                Background="#0affffff"
                                                Padding="10"
                                                x:Name="StopwatchTextBorder">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Grid ClipToBounds="True">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="30" />
                                                        <ColumnDefinition Width="30" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="30" />
                                                        <ColumnDefinition Width="30" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="30" />
                                                        <ColumnDefinition Width="30" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="30" />
                                                        <ColumnDefinition Width="30" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text=":"
                                                               TextAlignment="Center"
                                                               FontStretch="Condensed"
                                                               FontSize="50"
                                                               LineHeight="50"
                                                               LineStackingStrategy="BlockLineHeight"
                                                               FontFamily="Segoe UI Variable Display Regular"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               Grid.Column="2" />
                                                    <TextBlock Text=":"
                                                               TextAlignment="Center"
                                                               FontStretch="Condensed"
                                                               FontSize="50"
                                                               LineHeight="50"
                                                               LineStackingStrategy="BlockLineHeight"
                                                               FontFamily="Segoe UI Variable Display Regular"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               Grid.Column="5" />
                                                    <TextBlock Text="."
                                                               TextAlignment="Center"
                                                               FontStretch="Condensed"
                                                               FontSize="50"
                                                               LineHeight="50"
                                                               LineStackingStrategy="BlockLineHeight"
                                                               FontFamily="Segoe UI Variable Display Regular"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               Grid.Column="8" />

                                                    <TextBlock Text="0"
                                                               TextAlignment="Center"
                                                               FontStretch="Condensed"
                                                               x:Name="StopwatchTextH1"
                                                               FontSize="50"
                                                               LineHeight="50"
                                                               LineStackingStrategy="BlockLineHeight"
                                                               FontFamily="Segoe UI Variable Display Regular"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               Grid.Column="0"
                                                               RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <TranslateTransform Y="0" />
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                    <TextBlock Text="0"
                                                               TextAlignment="Center"
                                                               FontStretch="Condensed"
                                                               x:Name="StopwatchTextH2"
                                                               FontSize="50"
                                                               LineHeight="50"
                                                               LineStackingStrategy="BlockLineHeight"
                                                               FontFamily="Segoe UI Variable Display Regular"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               Grid.Column="1"
                                                               RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <TranslateTransform Y="0" />
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                    <TextBlock Text="0"
                                                               TextAlignment="Center"
                                                               FontStretch="Condensed"
                                                               x:Name="StopwatchTextM1"
                                                               FontSize="50"
                                                               LineHeight="50"
                                                               LineStackingStrategy="BlockLineHeight"
                                                               FontFamily="Segoe UI Variable Display Regular"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               Grid.Column="3"
                                                               RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <TranslateTransform Y="0" />
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                    <TextBlock Text="0"
                                                               TextAlignment="Center"
                                                               FontStretch="Condensed"
                                                               x:Name="StopwatchTextM2"
                                                               FontSize="50"
                                                               LineHeight="50"
                                                               LineStackingStrategy="BlockLineHeight"
                                                               FontFamily="Segoe UI Variable Display Regular"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               Grid.Column="4"
                                                               RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <TranslateTransform Y="0" />
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                    <TextBlock Text="0"
                                                               TextAlignment="Center"
                                                               FontStretch="Condensed"
                                                               x:Name="StopwatchTextS1"
                                                               FontSize="50"
                                                               LineHeight="50"
                                                               LineStackingStrategy="BlockLineHeight"
                                                               FontFamily="Segoe UI Variable Display Regular"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               Grid.Column="6"
                                                               RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <TranslateTransform Y="0" />
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                    <TextBlock Text="0"
                                                               TextAlignment="Center"
                                                               FontStretch="Condensed"
                                                               x:Name="StopwatchTextS2"
                                                               FontSize="50"
                                                               LineHeight="50"
                                                               LineStackingStrategy="BlockLineHeight"
                                                               FontFamily="Segoe UI Variable Display Regular"
                                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               Grid.Column="7"
                                                               RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <TranslateTransform Y="0" />
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                    <TextBlock Text="0"
                                                               TextAlignment="Center"
                                                               FontStretch="Condensed"
                                                               x:Name="StopwatchTextMS1"
                                                               FontSize="50"
                                                               LineHeight="50"
                                                               LineStackingStrategy="BlockLineHeight"
                                                               FontFamily="Segoe UI Variable Display Regular"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               Grid.Column="9"
                                                               RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <TranslateTransform Y="0" />
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                    <TextBlock Text="0"
                                                               TextAlignment="Center"
                                                               FontStretch="Condensed"
                                                               x:Name="StopwatchTextMS2"
                                                               FontSize="50"
                                                               LineHeight="50"
                                                               LineStackingStrategy="BlockLineHeight"
                                                               FontFamily="Segoe UI Variable Display Regular"
                                                               Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               Grid.Column="10"
                                                               RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <TranslateTransform Y="0" />
                                                        </TextBlock.RenderTransform>
                                                    </TextBlock>
                                                </Grid>
                                                <ProgressBar x:Name="StopwatchProgressBar"
                                                             Value="0"
                                                             Maximum="1000"
                                                             Margin="10,0,10,0"
                                                             HorizontalAlignment="Stretch"
                                                             Grid.Row="1"
                                                             RenderTransformOrigin="0.5,0.5">
                                                    <ProgressBar.RenderTransform>
                                                        <ScaleTransform ScaleX="1"
                                                                        ScaleY="1" />
                                                    </ProgressBar.RenderTransform>
                                                </ProgressBar>
                                            </Grid>
                                        </Border>
                                        <ScrollViewer Grid.Row="1"
                                                      x:Name="StopwatchLapScrollView"
                                                      PanningMode="VerticalOnly">
                                            <StackPanel Orientation="Vertical"
                                                        x:Name="LapStopwatchStack">
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Grid>
                                    <Grid Grid.Row="1"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid x:Name="SWButtonSep"
                                              Grid.Column="1" />
                                        <ui:Button x:Name="StartStopwatchBtn"
                                                   Click="StartStopwatchBtn_Click"
                                                   Content="Start"
                                                   FontFamily="Segoe UI Variable Display Regular"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                   Grid.Column="2"
                                                   Width="200"
                                                   HorizontalAlignment="Stretch"
                                                   Icon="{ui:ImageIcon '/Resources/icons/play.png'}"
                                                   Appearance="Primary" />
                                        <ui:Button x:Name="PauseStopwatchBtn"
                                                   Click="PauseStopwatchBtn_Click"
                                                   Content="Pause"
                                                   FontFamily="Segoe UI Variable Display Regular"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                   Grid.Column="2"
                                                   Width="200"
                                                   HorizontalAlignment="Stretch"
                                                   Visibility="Hidden"
                                                   Icon="{ui:ImageIcon '/Resources/icons/pause.png'}"
                                                   Appearance="Primary" />
                                        <ui:Button x:Name="ResetStopwatchBtn"
                                                   Click="ResetStopwatchBtn_Click"
                                                   Content="Reset"
                                                   FontFamily="Segoe UI Variable Display Regular"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                   Grid.Column="0"
                                                   Width="0"
                                                   HorizontalAlignment="Stretch"
                                                   Icon="{ui:ImageIcon '/Resources/icons/reset.png'}"
                                                   Visibility="Hidden" />
                                        <ui:Button x:Name="LapStopwatchBtn"
                                                   Click="LapStopwatchBtn_Click"
                                                   Content="Lap"
                                                   FontFamily="Segoe UI Variable Display Regular"
                                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                   Grid.Column="0"
                                                   Width="0"
                                                   HorizontalAlignment="Stretch"
                                                   Icon="{ui:ImageIcon '/Resources/icons/lap.png'}"
                                                   Visibility="Hidden" />
                                    </Grid>
                                </Grid>
                                <Grid x:Name="TimerGrid"
                                      Visibility="Hidden">
                                    <Grid.RenderTransform>
                                        <TranslateTransform X="0" />
                                    </Grid.RenderTransform>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>
                                    <Border x:Name="TimerBorder"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            CornerRadius="8"
                                            Background="#0affffff"
                                            Padding="10">
                                        <Grid x:Name="TimerwBtnGrid">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <ui:Button x:Name="TimerHourUpBtn"
                                                       Click="TimerHourUpBtn_Click"
                                                       Icon="{ui:ImageIcon '/Resources/icons/up.png'}"
                                                       Grid.Column="0"
                                                       Grid.Row="0"
                                                       HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Center"
                                                       Height="31" />
                                            <Grid Grid.Column="0"
                                                  Grid.Row="1"
                                                  ClipToBounds="True">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="40" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock x:Name="TimerH1Text"
                                                           Text="0"
                                                           Grid.Column="0"
                                                           FontSize="75"
                                                           FontFamily="Segoe UI Variable Display Regular"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           LineHeight="75"
                                                           LineStackingStrategy="BlockLineHeight"
                                                           RenderTransformOrigin="0.5,0.5">
                                                    <TextBlock.RenderTransform>
                                                        <TranslateTransform Y="0" />
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                                <TextBlock x:Name="TimerH2Text"
                                                           Text="0"
                                                           Grid.Column="1"
                                                           FontSize="75"
                                                           FontFamily="Segoe UI Variable Display Regular"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           LineHeight="75"
                                                           LineStackingStrategy="BlockLineHeight"
                                                           RenderTransformOrigin="0.5,0.5">
                                                    <TextBlock.RenderTransform>
                                                        <TranslateTransform Y="0" />
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                            </Grid>
                                            <ui:Button x:Name="TimerHourDownBtn"
                                                       Click="TimerHourDownBtn_Click"
                                                       Icon="{ui:ImageIcon '/Resources/icons/down.png'}"
                                                       Grid.Column="0"
                                                       Grid.Row="2"
                                                       HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Center"
                                                       Height="31" />
                                            <TextBlock Text=":"
                                                       Grid.Column="1"
                                                       Grid.Row="1"
                                                       FontSize="75"
                                                       FontFamily="Segoe UI Variable Display Regular"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       LineHeight="75"
                                                       LineStackingStrategy="BlockLineHeight" />
                                            <ui:Button x:Name="TimerMinuteUpBtn"
                                                       Click="TimerMinuteUpBtn_Click"
                                                       Icon="{ui:ImageIcon '/Resources/icons/up.png'}"
                                                       Grid.Column="2"
                                                       Grid.Row="0"
                                                       HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Center"
                                                       Height="31" />
                                            <Grid Grid.Column="2"
                                                  Grid.Row="1"
                                                  ClipToBounds="True">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="40" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock x:Name="TimerM1Text"
                                                           Text="0"
                                                           Grid.Column="0"
                                                           FontSize="75"
                                                           FontFamily="Segoe UI Variable Display Regular"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           LineHeight="75"
                                                           LineStackingStrategy="BlockLineHeight">
                                                    <TextBlock.RenderTransform>
                                                        <TranslateTransform Y="0" />
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                                <TextBlock x:Name="TimerM2Text"
                                                           Text="0"
                                                           Grid.Column="1"
                                                           FontSize="75"
                                                           FontFamily="Segoe UI Variable Display Regular"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           LineHeight="75"
                                                           LineStackingStrategy="BlockLineHeight">
                                                    <TextBlock.RenderTransform>
                                                        <TranslateTransform Y="0" />
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                            </Grid>
                                            <ui:Button x:Name="TimerMinuteDownBtn"
                                                       Click="TimerMinuteDownBtn_Click"
                                                       Icon="{ui:ImageIcon '/Resources/icons/down.png'}"
                                                       Grid.Column="2"
                                                       Grid.Row="2"
                                                       HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Center"
                                                       Height="31" />
                                            <TextBlock Text=":"
                                                       Grid.Column="3"
                                                       Grid.Row="1"
                                                       FontSize="75"
                                                       FontFamily="Segoe UI Variable Display Regular"
                                                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       LineHeight="75"
                                                       LineStackingStrategy="BlockLineHeight" />
                                            <ui:Button x:Name="TimerSecondUpBtn"
                                                       Click="TimerSecondUpBtn_Click"
                                                       Icon="{ui:ImageIcon '/Resources/icons/up.png'}"
                                                       Grid.Column="4"
                                                       Grid.Row="0"
                                                       HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Center"
                                                       Height="31" />
                                            <Grid Grid.Column="4"
                                                  Grid.Row="1"
                                                  ClipToBounds="True">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40" />
                                                    <ColumnDefinition Width="40" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock x:Name="TimerS1Text"
                                                           Text="0"
                                                           Grid.Column="0"
                                                           FontSize="75"
                                                           FontFamily="Segoe UI Variable Display Regular"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           LineHeight="75"
                                                           LineStackingStrategy="BlockLineHeight">
                                                    <TextBlock.RenderTransform>
                                                        <TranslateTransform Y="0" />
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                                <TextBlock x:Name="TimerS2Text"
                                                           Text="0"
                                                           Grid.Column="1"
                                                           FontSize="75"
                                                           FontFamily="Segoe UI Variable Display Regular"
                                                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"
                                                           LineHeight="75"
                                                           LineStackingStrategy="BlockLineHeight">
                                                    <TextBlock.RenderTransform>
                                                        <TranslateTransform Y="0" />
                                                    </TextBlock.RenderTransform>
                                                </TextBlock>
                                            </Grid>
                                            <ui:Button x:Name="TimerSecondDownBtn"
                                                       Click="TimerSecondDownBtn_Click"
                                                       Icon="{ui:ImageIcon '/Resources/icons/down.png'}"
                                                       Grid.Column="4"
                                                       Grid.Row="2"
                                                       HorizontalAlignment="Stretch"
                                                       VerticalAlignment="Center"
