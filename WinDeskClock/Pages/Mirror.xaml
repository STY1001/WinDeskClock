<Page x:Class="WinDeskClock.Pages.Mirror"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WinDeskClock.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Mirror">

    <Grid>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 10">
                <Label Content="Caméra :"
                       VerticalAlignment="Center" />
                <ComboBox x:Name="CameraComboBox"
                          Width="300"
                          Margin="5 0"
                          SelectionChanged="CameraComboBox_SelectionChanged" />
                <CheckBox x:Name="MirrorCheckBox"
                          Content="Mode miroir"
                          VerticalAlignment="Center"
                          Margin="10 0" />
            </StackPanel>

            <Border Grid.Row="1"
                    BorderThickness="1">
                <Image x:Name="CameraImage"
                       Stretch="Uniform" />
            </Border>
            <ui:ProgressRing VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             IsIndeterminate="True"
                             Visibility="Collapsed"
                             Grid.Row="1"
                             x:Name="LoadingIndicator" />
        </Grid>
    </Grid>
</Page>
